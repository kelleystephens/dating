extends ../shared/template

block content
  if(user.sex === 'male')
    #background
    #contain
      #pic
      #name1= user.name
      a#msg(href='/message/#{user._id}') Message Me!
    .container
        .section1.col-md-8
          #about= user.about
          #line
          if(activities)
            each activity in activities
              .activity= activity.name
        .side1.col-md-4
          #sex= user.sex
          #lookingFor= user.lookingFor
          #race= user.race
          #religion= user.religion
          #bodyType= user.bodyType
          #height= user.height
  else
    #background2
      #contain2
        #pic
        #name2= user.name
        a#msg(href='/message/#{user._id}') Message Me!
      .container
          .section2.col-md-8
            #about= user.about
            #line2
            if(activities)
              each activity in activities
                .activity= activity.name
          .side2.col-md-4
            #sex= user.sex
            #lookingFor= user.lookingFor
            #race= user.race
            #religion= user.religion
            #bodyType= user.bodyType
            #height= user.height
