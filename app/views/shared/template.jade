    div#container_demo
      // hidden anchor to stop jump http://www.css3create.com/Astuce-Empecher-le-scroll-avec-l-utilisation-de-target#wrap4
      a#toregister.hiddenanchor
      a#tologin.hiddenanchor
      div#wrapper
        div#login.animate.form
          form(action='mysuperscript.php', autocomplete='on')
            h1 Log in
            p
              label.uname(for='username')  Your email
              input#username(name='username', required='required', type='text', placeholder='mymail@mail.com')
            p
              label.youpasswd(for='password')  Your password
              input#password(name='password', required='required', type='password', placeholder='eg. X8df!90EO')
            p.keeplogin
              input#loginkeeping(type='checkbox', name='loginkeeping', value='loginkeeping')
              label(for='loginkeeping') Keep me logged in
            p.login.button
              input(type='submit', value='Login')
            p.change_link
              | Not a member yet ?
              a.to_register(href='#toregister') Join us
        div#register.animate.form
          form(action='mysuperscript.php', autocomplete='on')
            h1  Sign up
            p
              label.uname(for='usernamesignup') Your Name
              input#usernamesignup(name='usernamesignup', required='required', type='text', placeholder='Name')
            p
              label.youmail(for='emailsignup')  Your email
              input#emailsignup(name='emailsignup', required='required', type='email', placeholder='Email')
            p
              label.youpasswd(for='passwordsignup') Your password
              input#passwordsignup(name='passwordsignup', required='required', type='password', placeholder='Password')
            p
              label.youpasswd(for='passwordsignup_confirm') Your Zip Code
              input#passwordsignup_confirm(name='passwordsignup_confirm', required='required', type='text', placeholder='Zip Code')
            p.signin.button
              input(type='submit', value='Sign up')
            p.change_link
              | Already a member ?
              a.to_register(href='#tologin')  Go and log in


